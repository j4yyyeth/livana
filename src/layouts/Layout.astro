    background: linear-gradient(
      135deg,
      rgba(196, 165, 199, 0.1),
      rgba(166, 137, 170, 0.1)
    );
    border: 2px solid #c4a5c7;
    border-radius: 20px;
    padding: 3rem 2.5rem;
    position: relative;
    box-shadow: 0 15px 40px rgba(107, 91, 149, 0.1);
    transition: all 0.3s ease-in-out;
    text-align: left;
  }

  .offering-card.featured:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(107, 91, 149, 0.15);
  }

  .offering-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .offering-badge {
    background: linear-gradient(135deg, #6b5b95, #8b7faa);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.5px;
  }

  /* Section Headers */
  .offerings-section-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .section-title {
    font-size: 2.2rem;
    font-weight: 300;
    color: #4a4a6a;
    margin-bottom: 0.5rem;
    letter-spacing: 0.5px;
  }

  .section-description {
    font-size: 1.1rem;
    color: #666;
    font-style: italic;
    font-weight: 300;
  }

