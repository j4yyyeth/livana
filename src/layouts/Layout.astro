    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  .offering-card {
    background: white;
    border-radius: 15px;
    padding: 2.5rem 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border: 1px solid #f0f0f0;
    transition: all 0.3s ease-in-out;
    text-align: left;
    position: relative;
    overflow: hidden;
  }

  .offering-card:hover::before {
    opacity: 1;
  }

  .offering-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  .offering-card.special {
    background: linear-gradient(
      135deg,
      rgba(139, 127, 170, 0.05),
      rgba(107, 91, 149, 0.05)
    );
    border: 1px solid rgba(107, 91, 149, 0.2);
  }

  .offering-symbol {
    font-size: 1.5rem;
    color: #c4a5c7;
    margin-bottom: 1rem;
  }

  .offering-title {
    font-size: 1.8rem;
    font-weight: 400;
    margin-bottom: 0.8rem;
    color: #4a4a6a;
    letter-spacing: 0.5px;
    line-height: 1.3;
  }

  .offering-subtitle {
    font-size: 1.1rem;
    font-weight: 600;
    color: #6b5b95;
    margin-bottom: 1.5rem;
    font-style: italic;
    line-height: 1.4;
  }

  .offering-description {
    font-size: 1rem;
    line-height: 1.7;
    color: #555;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  /* Pricing */
  .offering-pricing {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .price-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background: rgba(196, 165, 199, 0.1);
    border-radius: 10px;
    border: 1px solid rgba(196, 165, 199, 0.2);
  }

  .duration {
    font-size: 1rem;
    color: #4a4a6a;
    font-weight: 400;
  }

  .price {
    font-size: 1.3rem;
    color: #6b5b95;
    font-weight: 600;
  }

  .offering-contact {
    background: rgba(139, 127, 170, 0.1);
    padding: 1.5rem;
    border-radius: 10px;
    border: 1px solid rgba(139, 127, 170, 0.2);
    text-align: center;
    margin: 0 auto;
    width: 100%;
    display: block;
    text-decoration: none;
  }

  .contact-note {
    font-size: 1rem;
    color: #6b5b95;
    font-weight: 500;
    font-style: italic;
  }

  /* Call to Action Section */
  .cta-section {
    background: #f8f4ff;
    color: #2d2d3d;
    padding: 6rem 2rem;
    text-align: center;
  }

  .cta-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .cta-text {
    font-size: 2.5rem;
    font-weight: 300;
    line-height: 1.4;
    color: #4a4a6a;
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
  }

  .cta-button-main {
    display: inline-block;
    padding: 1.2rem 3rem;
    background: linear-gradient(135deg, #6b5b95, #8b7faa);
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 400;
    letter-spacing: 1px;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 10px 30px rgba(107, 91, 149, 0.3);
  }

  .cta-button-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(107, 91, 149, 0.4);
    background: linear-gradient(135deg, #5a4a85, #7a6f9a);
  }

  /* Footer Section */
  .footer-section {
    background: #2d2d3d;
    color: white;
