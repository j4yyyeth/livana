---
import Layout from "../layouts/Layout.astro";

// src/pages/disclaimer.astro
---

<Layout title="Disclaimer - Livana, Soul Doula" description="Important information about services and responsibilities for your healing journey with Livana, Soul Doula.">
    <div class="hero-section">
      <nav class="navigation">
        <ul class="nav-list">
          <li><a href="/" class="nav-link">ABOUT</a></li>
          <li><a href="/#offerings" class="nav-link">OFFERINGS</a></li>
          <li><a href="/contact" class="nav-link">CONTACT</a></li>
        </ul>
      </nav>

      <div class="hero-content">
        <img src="/logo.svg" alt="Livana Logo" class="hero-logo" style="width: 500px; filter: brightness(0) invert(1);" />
        <p class="description">
          Important information about services and responsibilities for your healing journey.
        </p>
      </div>
    </div>

    <section class="disclaimer-section animate-on-scroll">
      <div class="disclaimer-container">
        <div class="disclaimer-content">
          <h1 class="disclaimer-title animate-fade-up">Disclaimer</h1>
          
          <div class="disclaimer-text animate-fade-up" style="animation-delay: 0.2s;">
            <p>
              All information and guidance shared on this website and in sessions with Livana Futterman are intended to educate, support, and inspire you in connecting more deeply with yourself and your personal journey. While Livana may offer insights and reflections, you are solely responsible for your own choices, actions, and outcomes.
            </p>
            
            <p>
              Although Livana is a licensed social worker, the services provided through this soul doula practice are not intended to serve as clinical therapy or medical treatment unless explicitly agreed upon. No specific results or outcomes are guaranteed.
            </p>
            
            <p>
              By using this website and engaging with her services, you acknowledge and accept the terms of this disclaimer.
            </p>
          </div>

          <div class="disclaimer-cta animate-fade-up" style="animation-delay: 0.4s;">
            <p class="cta-text">Questions about our approach?</p>
            <a href="/contact" class="cta-button-secondary">Let's Connect</a>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer-section animate-on-scroll">
      <div class="footer-container">
        <div class="footer-logo animate-fade-up">
          <img src="/logo.svg" alt="Livana Logo" class="footer-logo-image" />
        </div>

        <div class="footer-column footer-contact animate-fade-up" style="animation-delay: 0.1s;">
          <h3>Contact</h3>
          <p><a href="mailto:livana@livanasouldoula.com" class="contact-link">livana@livanasouldoula.com</a></p>
          <p><a href="tel:+14046175386" class="contact-link">+1 (404) 617-5386</a></p>
        </div>

        <div class="footer-column animate-fade-up" style="animation-delay: 0.2s;">
          <h3>Quick Links</h3>
          <ul class="footer-links">
            <li><a href="/">About</a></li>
            <li><a href="/#offerings">Offerings</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/disclaimer">Disclaimer</a></li>
          </ul>
        </div>

        <div class="footer-message animate-fade-up" style="animation-delay: 0.3s;">
          <p class="footer-message-text">
            Walk confidently toward a more aligned and fulfilled life.
          </p>
        </div>
      </div>
    </footer>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Georgia', serif;
    color: white;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Animation Classes */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animate-fade-up {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animate-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-section {
    min-height: 60vh;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/bg.jpg');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    z-index: -1;
  }

  .navigation {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 2rem 4rem;
    z-index: 10;
  }

  .nav-list {
    display: flex;
    justify-content: center;
    gap: 4rem;
    list-style: none;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 300;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 1px;
    background: white;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .hero-content {
    max-width: 800px;
    z-index: 5;
    padding-top: 14rem;
  }

  .description {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 3rem;
    font-weight: 300;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    animation: fadeInUp 1s ease forwards 1.1s;
  }

  /* Disclaimer Section */
  .disclaimer-section {
    background: #f8f4ff;
    color: #2d2d3d;
    padding: 6rem 2rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .disclaimer-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .disclaimer-content {
    background: white;
    padding: 4rem 3rem;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid #f0f0f0;
  }

  .disclaimer-title {
    font-size: 3.5rem;
    font-weight: 300;
    margin-bottom: 3rem;
    color: #4a4a6a;
    letter-spacing: 1px;
    line-height: 1.2;
  }

  .disclaimer-text {
    text-align: left;
    margin-bottom: 3rem;
  }

  .disclaimer-text p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #444;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .disclaimer-text p:last-child {
    margin-bottom: 0;
    font-weight: 400;
    color: #4a4a6a;
  }

  .disclaimer-cta {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #e8e8e8;
  }

  .cta-text {
    font-size: 1.3rem;
    font-weight: 300;
    color: #4a4a6a;
    margin-bottom: 2rem;
    letter-spacing: 0.5px;
  }

  .cta-button-secondary {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: transparent;
    border: 2px solid #6b5b95;
    color: #6b5b95;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 400;
    letter-spacing: 1px;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .cta-button-secondary:hover {
    background: #6b5b95;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(107, 91, 149, 0.3);
  }

  /* Footer Section */
  .footer-section {
    background: #2d2d3d;
    color: white;
    padding: 4rem 2rem 2rem 2rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 2fr;
    gap: 3rem;
    align-items: start;
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-logo-image {
    width: 130px;
    height: 130px;
    border-radius: 10px;
    margin-bottom: 1rem;
    object-fit: cover;
    filter: brightness(0) invert(1);
  }

  .footer-column h3 {
    font-size: 1.2rem;
    font-weight: 400;
    margin-bottom: 1.5rem;
    color: white;
    letter-spacing: 0.5px;
  }

  .footer-contact p {
    margin-bottom: 0.5rem;
    color: #ccc;
    font-size: 0.95rem;
    font-weight: 300;
  }

  .contact-link {
    color: #ccc;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 300;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: white;
    text-decoration: underline;
  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: 0.8rem;
  }

  .footer-links a {
    color: #ccc;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 300;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: white;
  }

  .footer-message {
    text-align: right;
    padding-left: 2rem;
  }

  .footer-message-text {
    font-size: 1.8rem;
    font-weight: 300;
    line-height: 1.4;
    color: #b8b8b8;
    letter-spacing: 0.5px;
    font-style: italic;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .navigation {
      padding: 2rem 0;
    }

    .nav-list {
      gap: 2rem;
      flex-wrap: wrap;
    }

    .nav-link {
      font-size: 1rem;
    }

    .hero-content img {
      width: 300px !important;
    }

    .description {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .disclaimer-section {
      padding: 4rem 1rem;
    }

    .disclaimer-content {
      padding: 3rem 2rem;
    }

    .disclaimer-title {
      font-size: 2.5rem;
    }

    .disclaimer-text p {
      font-size: 1rem;
    }

    .cta-text {
      font-size: 1.1rem;
    }

    .cta-button-secondary {
      padding: 0.9rem 2rem;
      font-size: 1rem;
    }

    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-message {
      text-align: center;
      padding-left: 0;
    }

    .footer-message-text {
      font-size: 1.4rem;
    }
  }

  @media (max-width: 480px) {
    .disclaimer-content {
      padding: 2rem 1.5rem;
    }

    .disclaimer-title {
      font-size: 2rem;
    }

    .disclaimer-text p {
      font-size: 0.95rem;
    }

    .footer-message-text {
      font-size: 1.2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Intersection Observer for scroll animations
    const observerOptions = {
      root: null,
      rootMargin: '0px 0px -100px 0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-visible');
        }
      });
    }, observerOptions);

    // Observe all elements with animation classes
    document.querySelectorAll('.animate-on-scroll, .animate-fade-up').forEach(el => {
      observer.observe(el);
    });
  });
</script>
</Layout>